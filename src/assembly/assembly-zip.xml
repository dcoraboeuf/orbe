<assembly>
	<id>java</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-install.jar</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>*:jar</include>
			</includes>
			<outputDirectory>dependency</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>